proc transaction collect_frank : (#a : auction) |{*}- ($d : 1) =
{
  $la <- acquire #a ;
  pay $la {*} ;
  case $la (
    running => abort
  | ended => $la.collect ;
             case $la (
               won => $l <- recv $la ;
                      get $la {*} ;
                      #a <- release $la ;
                      wait $l ;
                      Nomos.deposit {*} ;
                      close $d
            | lost => $m <- recv $la ;
                      get $la {*} ;
                      #a <- release $la ;
                      pay $m {*} ;
                      $m.destroy ;
                      get $m {*} ;
                      wait $m ;
                      Nomos.deposit {*} ;
                      close $d
            )
  | terminated => abort
  )
}

exec collect_frank #ch3