type ulist = +{cons : |{*}> ulist, nil : 1}

proc asset cons : ($t : ulist) |{*}- ($l : ulist) =
{
  work {1.} ;
  $l.cons ;
  pay $l {*} ;
  $l <- $t
}

proc asset rdwalk : ($l : ulist) |{*}- ($d : 1) =
{
  case $l (
    cons =>
      get $l {*} ;
      flip {0.6} (
        HH => $d <- rdwalk <- $l
      | TT => $l1 <- cons <- $l ;
              $l2 <- cons <- $l1 ;
              $d <- rdwalk <- $l2
      )
  | nil => wait $l ;
           close $d
  )
}